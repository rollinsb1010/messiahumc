<% content_for :body_content_title do %>
  <%= @pastor.name %>
<% end %>

<% content_for :body_content_left do %>
  <p class="job_title">
    <%=raw @pastor.job_title %>
  </p>
  <div class="details">
    <section>
      <%=raw @pastor.bio %>
    </section>
    <section>
      <%=raw @pastor.email %>
    </section>
  </div>
<% end %>

<% content_for :body_content_right do %>
  <aside class="staff_right">
    <p>
      <%= image_fu @pastor.thumbnail, '257x371#c' %>
    </p>
    <div>
      <h2><%= t('.other') %></h2>
      <ul id="pastors">
        <% @pastors.each do |pastor| %>
          <li>
            <%= link_to pastor.name, refinery.pastors_pastor_path(pastor) %>
          </li>
        <% end %>
      </ul>
    </div>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
