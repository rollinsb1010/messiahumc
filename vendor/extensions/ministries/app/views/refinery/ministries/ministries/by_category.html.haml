= render 'menu'

- content_for :body_content_right do
  .by_category
    %h1 #{@category.name} Ministries
    %ul.members
      - @category.ministries.each do |ministry|
        %li
          - unless ministry.logo.nil?
            %aside= image_fu ministry.logo, '150x182#c'
          %h2 #{ministry.name}
          .description= ministry.description

= render partial: '/refinery/content_page', locals: { hide_sections: [:body_content_title]}
