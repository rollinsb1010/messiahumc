- content_for :body_content_right do
  %h1 #{@event.title}
  .event_details
    - if @event.ministry and @event.ministry.logo.present?
      %aside.event_right
        %p= image_fu @event.ministry.logo, '84x96'
    - if @event.image.present?
      %section.event_image= image_fu @event.image

    = render partial: 'event_metadata', locals: {event: @event}

    %section=raw @event.long_description
