<% content_for :body_content_title do %>
  <%= @staff_member.name %>
<% end %>

<% content_for :body_content_left do %>
  <p class="job_title">
    <%=raw @staff_member.job_title %>
  </p>
  <div class="details">
    <section>
      <%=raw @staff_member.bio %>
    </section>
    <section>
      <%=raw @staff_member.email %>
    </section>
  </div>
<% end %>

<% unless @staff_member.photo.nil? %>
  <% content_for :body_content_right do %>
    <aside class="staff_right">
      <p>
        <%= image_fu @staff_member.photo, '257x371#c' %>
      </p>
    </aside>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
