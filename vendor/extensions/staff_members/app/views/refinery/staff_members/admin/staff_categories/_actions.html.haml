%ul
  - if ::Refinery::StaffMembers::Admin::StaffCategoriesController.searchable?
    %li
      = render '/refinery/admin/search', url: refinery.staff_members_admin_staff_categories_path
  %li
    = link_to t('.create_new'), refinery.new_staff_members_admin_staff_category_path, class: "add_icon"
  - if !searching? && ::Refinery::StaffMembers::Admin::StaffCategoriesController.sortable? && ::Refinery::StaffMembers::StaffMember.any?
    %li
      = link_to t('.reorder', what: "Staff Categories"), refinery.staff_members_admin_staff_categories_path, id: "reorder_action", class: "reorder_icon"
      = link_to t('.reorder_done', what: "Staff Categories"), refinery.staff_members_admin_staff_categories_path, id: "reorder_action_done", style: "display: none;", class: "reorder_icon"
  %li
    = link_to t('.manage_staff_members', what: 'Staff Members'), refinery.staff_members_admin_staff_members_path, class: "edit_icon"
