- content_for :body_content_right do
  .sermons
    %h1= title
    = render 'right_side_bar'
    %ul#sermons
      - @sermons.each_with_index do |sermon, index|
        %li{class: index.zero? ? 'first' : ''}
          = render partial: 'sermon', locals: {sermon: sermon, summary: true}
    = will_paginate
