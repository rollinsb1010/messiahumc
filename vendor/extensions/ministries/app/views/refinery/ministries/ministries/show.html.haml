- content_for :body_content_right do
  %h1 #{@ministry.name}
  .ministry_details
    %aside.ministry_right
      - if @ministry.logo.present?
        %p= image_fu @ministry.logo, '150x182'
      .links
        %p= link_to 'calendar of events', refinery.events_events_path
      - unless @ministry.upcoming_events.empty?
        .upcoming
          %h4 Upcoming Events
          %ul
            - @ministry.upcoming_events.each do |event|
              %li
                = link_to refinery.events_event_path(event) do
                  %span.date= event.date.strftime('%m/%d')
                  %span= event.title
                  %span.clear
    - if @ministry.center_image.present?
      %section.ministry_image= image_fu @ministry.center_image, '470x275#c'

    %section=raw @ministry.description
