<ul>
  <% if ::Refinery::Messengers::Admin::MessengersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.messengers_admin_messengers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_messengers_admin_messenger_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Messengers::Admin::MessengersController.sortable? && ::Refinery::Messengers::Messenger.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Messengers"),
                 refinery.messengers_admin_messengers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Messengers"),
                 refinery.messengers_admin_messengers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
