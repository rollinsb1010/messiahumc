<ul>
  <% if ::Refinery::StaffMembers::Admin::StaffMembersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.staff_members_admin_staff_members_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_staff_members_admin_staff_member_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::StaffMembers::Admin::StaffMembersController.sortable? && ::Refinery::StaffMembers::StaffMember.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Staff Members"),
                 refinery.staff_members_admin_staff_members_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Staff Members"),
                 refinery.staff_members_admin_staff_members_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
