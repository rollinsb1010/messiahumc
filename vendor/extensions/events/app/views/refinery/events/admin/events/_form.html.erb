<%= form_for [refinery, :events_admin, @event] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.date_select :date  -%>

  </div>
  
  <div class='field'>
    <%= f.label :start_time -%>
    <%= f.time_select :start_time  -%>

  </div>
  
  <div class='field'>
    <%= f.label :end_time -%>
    <%= f.time_select :end_time  -%>

  </div>
  
  <div class='field'>
    <%= f.label :repetition -%>
    <%= f.text_field :repetition  -%>

  </div>
  
  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location  -%>

  </div>
  
  <div class='field'>
    <%= f.label :short_description -%>
    <%= f.text_field :short_description  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:long_description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/events/event", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:long_description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :contact_name -%>
    <%= f.text_field :contact_name  -%>

  </div>
  
  <div class='field'>
    <%= f.label :contact_email -%>
    <%= f.text_field :contact_email  -%>

  </div>
  
  <div class='field'>
    <%= f.label :contact_phone -%>
    <%= f.text_field :contact_phone  -%>

  </div>
  
  <div class='field'>
    <%= f.label :notes -%>
    <%= f.text_field :notes  -%>

  </div>
  
  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @event.image,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :ministry_id -%>
    <%= f.number_field :ministry_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :highlighted -%>
    <%= f.check_box :highlighted, :checked => @event[:highlighted]  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.events.admin.events.event'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
