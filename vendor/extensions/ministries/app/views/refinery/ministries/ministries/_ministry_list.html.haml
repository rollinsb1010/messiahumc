%ul
  - ministries.each do |ministry|
    %li
      %h2.purple= link_to ministry.name, refinery.ministries_ministry_path(ministry)
      - unless ministry.logo.nil?
        %aside= image_fu ministry.logo, '84x96'
      %span.clear
      .description
        = raw truncate_html(ministry.description, omission: link_to('(more...)', refinery.ministries_ministry_path(ministry))) { |html| html = html.gsub(/<p><img.+?><\/p>/, '') }
      %span.clear
