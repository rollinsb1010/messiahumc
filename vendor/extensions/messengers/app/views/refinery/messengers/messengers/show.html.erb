<% content_for :body_content_title do %>
  <%= @messenger.messenger_type %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Messenger Type</h1>
    <p>
      <%=raw @messenger.messenger_type %>
    </p>
  </section>
  <section>
    <h1>Published At</h1>
    <p>
      <%=raw @messenger.published_at %>
    </p>
  </section>
  <section>
    <h1>Pdf File</h1>
    <p>
      <% if @messenger.pdf_file.present? %>
        <%= link_to 'pdf_file', @messenger.pdf_file.url %>
      <% else %>
        pdf_file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="messengers">
      <% @messengers.each do |messenger| %>
        <li>
          <%= link_to messenger.messenger_type, refinery.messengers_messenger_path(messenger) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
