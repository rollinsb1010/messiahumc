= render partial: '/refinery/staff_members/staff_members/menu'

- content_for :body_content_right do
  .person_view
    %h1 Meet #{@person.name}
    %aside
      - link = mail_to(@person.email)
      %p= image_fu @person.photo, '257x371#c'
      - unless @person.email.empty?
        %p
          = link do
            email #{@person.name}
      - if @person.pastor?
        %p
          = link do
            jots from #{@person.name}
    .bio= raw @person.bio

= render partial: '/refinery/content_page', locals: { hide_sections: [:body_content_title]}
