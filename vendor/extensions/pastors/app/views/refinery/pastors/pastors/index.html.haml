- content_for :body_content_right do
  %h1 Meet Our Pastors
  %ul#pastors
    - @pastors.each do |pastor|
      %li{class: cycle('first', '', 'last')}
        - link = refinery.pastors_pastor_path(pastor)
        %p.image_container
          = link_to link do
            = image_fu pastor.photo, '148x216#c'
        %p= link_to pastor.name, link
        %p.job_title= pastor.job_title
