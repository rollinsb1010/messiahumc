%li{class: "clearfix record #{cycle('on', 'on-hover')}", id: "#{dom_id(sermon_category)}"}
  %span.title
    = sermon_category.name
  %span.actions
    = link_to refinery_icon_tag("application_edit.png"), refinery.edit_sermons_admin_sermon_category_path(sermon_category),
         title: t('.edit')
    = link_to refinery_icon_tag("delete.png"), refinery.sermons_admin_sermon_category_path(sermon_category),
        class: "cancel confirm-delete",
        title: t('.delete'),
        onfirm: t('message', scope: 'refinery.admin.delete', title: sermon_category.name),
        method: :delete
