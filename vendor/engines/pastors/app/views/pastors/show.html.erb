<div class='pastor'>
  <% content_for :body_content_title do %>
    <%= @pastor.name %>
  <% end %>

  <% content_for :body_content_left do %>
    <p class='job_title'>
      <%=raw @pastor.job_title %>
    </p>
    <section>
      <p>
        <%=raw @pastor.bio %>
      </p>
    </section>
    <section>
      <p>
        <%=raw @pastor.email %>
      </p>
    </section>
  <% end %>

  <% content_for :body_content_right do %>
    <p>
      <%= image_fu @pastor.thumbnail, nil %>
    </p>
    <aside>
      <h2><%= t('.other') %></h2>
      <ul id="pastors">
        <% @pastors.each do |pastor| %>
          <li>
            <%= link_to pastor.name, pastor_url(pastor) %>
          </li>
        <% end %>
      </ul>
    </aside>
  <% end %>

  <%= render :partial => "/shared/content_page" %>
</div>
<% content_for :stylesheets, stylesheet_link_tag('pastors') %>
