- content_for :body_content_left do
  %h3 Ministry
  %ul.left_menu
    - @all_ministry_categories.each do |category|
      - member_match = "#{category.ministries.map(&:name).map(&:parameterize).join(')|(')}"
      - member_match = "|(#{member_match})" unless member_match.empty?
      - category_match = "(#{category.name.parameterize})#{member_match}"
      %li{class: current_class(/#{category_match}/)}
        %h4= link_to category.name, refinery.by_category_ministries_ministries_path(category), class: current_class(/#{category.name.parameterize}/)
        %ul
          - category.ministries.each do |ministry|
            %li= link_to ministry.name, refinery.ministries_ministry_path(ministry), class: current_class(/#{ministry.name.parameterize}/)
