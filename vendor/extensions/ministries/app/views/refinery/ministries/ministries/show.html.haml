= render 'menu'

- content_for :body_content_right do
  %h1 #{@ministry.name}
  .details
    - unless @ministry.logo.nil?
      %aside.ministry_right
        %p= image_fu @ministry.logo, '150x182#c'
    %section
      %h2 Description
      =raw @ministry.description

= render partial: '/refinery/content_page', locals: { hide_sections: [:body_content_title]}
