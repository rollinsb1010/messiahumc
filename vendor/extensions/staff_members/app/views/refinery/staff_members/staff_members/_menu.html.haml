- content_for :body_content_left do
  %h3 Meet Us
  %ul#staff_members
    %li.current.first
      %h4 Pastors
      %ul
        - @left_categories.first[:members].each do |pastor|
          %li= link_to pastor.name, refinery.pastors_pastor_path(pastor)
    - @all_categories.each do |category|
      %li
        %h4= category.name
        %ul
          - category.staff_members.each do |member|
            %li= link_to member.name, refinery.staff_members_staff_member_path(member)
