<% content_for :body_content_title do %>
  <%= @ministry.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @ministry.name %>
    </p>
  </section>
  <section>
    <h1>Ministry Category</h1>
    <p>
      <%=raw @ministry.ministry_category_id %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @ministry.description %>
    </p>
  </section>
  <section>
    <h1>Logo</h1>
    <p>
      <%= image_fu @ministry.logo, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ministries">
      <% @ministries.each do |ministry| %>
        <li>
          <%= link_to ministry.name, refinery.ministries_ministry_path(ministry) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
