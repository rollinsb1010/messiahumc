- content_for :body_content_right do
  %h1 Sermons
  %table#sermons
    %thead
      %th Date Given
      %th Location
      %th Title
      %th Pastor
      %th Scripture Reading
      %th
    %tbody
      - @sermons.each do |sermon|
        %tr
          %td= sermon.date.strftime('%-m/%-d/%Y')
          %td.location= sermon.location
          %td= sermon.title
          %td= sermon.pastor.name
          %td= raw sermon.scripture_reading
          %td= link_to 'View Â»', refinery.sermons_sermon_path(sermon)
