<%= form_for [:admin, @pastor] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @pastor,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :job_title -%>
    <%= f.text_field :job_title -%>
  </div>
  
  <div class='field'>
    <%= f.label :thumbnail -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :thumbnail_id,
          :image => @pastor.thumbnail,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :large_photo -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :large_photo_id,
          :image => @pastor.large_photo,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:bio].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:bio].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.pastors.pastor'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @pastor.name)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
