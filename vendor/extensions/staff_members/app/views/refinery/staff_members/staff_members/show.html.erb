<% content_for :body_content_title do %>
  <%= @staff_member.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @staff_member.name %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @staff_member.category_id %>
    </p>
  </section>
  <section>
    <h1>Job Title</h1>
    <p>
      <%=raw @staff_member.job_title %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @staff_member.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @staff_member.bio %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @staff_member.email %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="staff_members">
      <% @staff_members.each do |staff_member| %>
        <li>
          <%= link_to staff_member.name, refinery.staff_members_staff_member_path(staff_member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
