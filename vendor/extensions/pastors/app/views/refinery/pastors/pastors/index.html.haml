= render partial: '/refinery/staff_members/staff_members/menu'

- content_for :body_content_right do
  %h1 Meet Our Pastors
  %ul#pastors
    - @pastors.each do |pastor|
      %li
        - link = refinery.pastors_pastor_path(pastor)
        %p.image_container
          = link_to link do
            = image_fu pastor.photo, '148x216#c'
        %p= link_to pastor.name, link
        %p= pastor.job_title

= render partial: '/refinery/content_page', locals: { hide_sections: [:body_content_title]}
