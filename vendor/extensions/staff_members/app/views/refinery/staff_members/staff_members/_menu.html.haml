- content_for :body_content_left do
  %h3 Meet Us
  %ul.left_menu
    %li.first{class: current_class(/\/pastor/)}
      %h4= link_to 'Pastors', refinery.pastors_pastors_path, class: current_class(/\/pastors$/)
      %ul
        - @left_categories.first[:members].each do |pastor|
          %li= link_to pastor.name, refinery.pastors_pastor_path(pastor), class: current_class(/\/#{pastor.name.parameterize}$/)
    - @all_categories.each do |category|
      - member_match = "#{category.staff_members.map(&:name).map(&:parameterize).join('$)|(/')}"
      - member_match = "|(/#{member_match}$)" unless member_match.empty?
      - category_match = "(/#{category.name.parameterize}$)#{member_match}"
      %li{class: current_class(/\/#{category_match}$/)}
        %h4= link_to category.name, refinery.by_category_staff_members_staff_members_path(category), class: current_class(/\/#{category.name.parameterize}$/)
