= form_for [refinery, :ministries_admin, @ministry_category] do |f|
  = render '/refinery/admin/error_messages', object: @ministry_category, include_object_name: true
  .field
    = f.label :name
    = f.text_field :name, class: 'larger'
  .field
    = f.label :index_placement
    = select :ministry_category, :index_placement, left: 'left', right: 'right'
  = render '/refinery/admin/form_actions', f: f, continue_editing: false, delete_title: t('delete', scope: 'refinery.ministries.admin.ministries.ministry_category'), delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @ministry_category.name)
- content_for :javascripts do
  :javascript
    $(function(){
    page_options.init(false, '', '');
    });
