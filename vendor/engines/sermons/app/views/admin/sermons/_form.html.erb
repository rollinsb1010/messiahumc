<%= form_for [:admin, @sermon] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @sermon,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.date_select :date  -%>
  </div>
  
  <div class='field'>
    <%= f.label :speaker -%>
    <%= f.text_field :speaker  -%>
  </div>
  
  <div class='field'>
    <%= f.label :service, 'Main Sanctuary?' -%>
    <%= f.check_box :service, :checked => @sermon[:service]  -%>
  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.sermons.sermon'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @sermon.speaker)
              } %>
<% end -%>
