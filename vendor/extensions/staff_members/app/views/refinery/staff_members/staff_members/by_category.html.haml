- content_for :body_content_right do
  .staff
    .by_category
      %h1
        Meet
        = @staff_category.name.downcase.include?('our') ? '' : 'Our'
        = @staff_category.name
      %ul.members
        - @staff_category.staff_members.each_with_index do |member, index|
          %li.person_view{class: index.zero? ? 'first' : ''}
            %aside
              %p= image_fu member.photo, '257x371#c'
              - unless member.email.empty?
                %p
                  = mail_to member.email, "email #{member.name}"
            %h2 #{member.name}
            %h4 #{member.job_title}
            .bio= raw member.bio
            %span.clear
