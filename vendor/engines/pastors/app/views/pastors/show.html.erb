<% content_for :body_content_title do %>
  <%= @pastor.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @pastor.name %>
    </p>
  </section>
  <section>
    <h1>Job Title</h1>
    <p>
      <%=raw @pastor.job_title %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @pastor.thumbnail, nil %>
    </p>
  </section>
  <section>
    <h1>Large Photo</h1>
    <p>
      <%= image_fu @pastor.large_photo, nil %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @pastor.bio %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @pastor.email %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pastors">
      <% @pastors.each do |pastor| %>
        <li>
          <%= link_to pastor.name, pastor_url(pastor) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
