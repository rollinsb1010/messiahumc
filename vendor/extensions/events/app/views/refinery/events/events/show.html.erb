<% content_for :body_content_title do %>
  <%= @event.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @event.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @event.date %>
    </p>
  </section>
  <section>
    <h1>Start Time</h1>
    <p>
      <%=raw @event.start_time %>
    </p>
  </section>
  <section>
    <h1>End Time</h1>
    <p>
      <%=raw @event.end_time %>
    </p>
  </section>
  <section>
    <h1>Repetition</h1>
    <p>
      <%=raw @event.repetition %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @event.location %>
    </p>
  </section>
  <section>
    <h1>Short Description</h1>
    <p>
      <%=raw @event.short_description %>
    </p>
  </section>
  <section>
    <h1>Long Description</h1>
    <p>
      <%=raw @event.long_description %>
    </p>
  </section>
  <section>
    <h1>Contact Name</h1>
    <p>
      <%=raw @event.contact_name %>
    </p>
  </section>
  <section>
    <h1>Contact Email</h1>
    <p>
      <%=raw @event.contact_email %>
    </p>
  </section>
  <section>
    <h1>Contact Phone</h1>
    <p>
      <%=raw @event.contact_phone %>
    </p>
  </section>
  <section>
    <h1>Notes</h1>
    <p>
      <%=raw @event.notes %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @event.image, nil %>
    </p>
  </section>
  <section>
    <h1>Ministry</h1>
    <p>
      <%=raw @event.ministry_id %>
    </p>
  </section>
  <section>
    <h1>Highlighted</h1>
    <p>
      <%=raw @event.highlighted %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title, refinery.events_event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
