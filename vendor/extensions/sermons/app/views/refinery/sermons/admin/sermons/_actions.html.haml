%ul
  - if ::Refinery::Sermons::Admin::SermonsController.searchable?
    %li
      = render '/refinery/admin/search', url: refinery.sermons_admin_sermons_path
  %li
    = link_to t('.create_new'), refinery.new_sermons_admin_sermon_path, class: "add_icon"
  - if !searching? && ::Refinery::Sermons::Admin::SermonsController.sortable? && ::Refinery::Sermons::Sermon.any?
    %li
      = link_to t('.reorder', what: "Sermons"), refinery.sermons_admin_sermons_path, id: "reorder_action", class: "reorder_icon"
      = link_to t('.reorder_done', what: "Sermons"), refinery.sermons_admin_sermons_path, id: "reorder_action_done", style: "display: none;", class: "reorder_icon"
  %li
    = link_to t('.manage_categories', what: 'Sermons'), refinery.sermons_admin_sermon_categories_path, class: "edit_icon"
