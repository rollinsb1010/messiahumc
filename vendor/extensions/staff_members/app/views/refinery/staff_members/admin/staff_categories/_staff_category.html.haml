%li{class: "clearfix record #{cycle('on', 'on-hover')}", id: "#{dom_id(staff_category)}"}
  %span.title
    = staff_category.name
  %span.actions
    = link_to refinery_icon_tag("application_edit.png"), refinery.edit_staff_members_admin_staff_category_path(staff_category),
         title: t('.edit')
    = link_to refinery_icon_tag("delete.png"), refinery.staff_members_admin_staff_category_path(staff_category),
        class: "cancel confirm-delete",
        title: t('.delete'),
        confirm: t('message', scope: 'refinery.admin.delete', title: staff_category.name),
        method: :delete
