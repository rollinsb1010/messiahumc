<% content_for :body_content_title do %>
  <%= @sermon.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Pastor</h1>
    <p>
      <%=raw @sermon.pastor_id %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @sermon.date %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @sermon.title %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @sermon.location %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @sermon.description %>
    </p>
  </section>
  <section>
    <h1>Scripture Reading</h1>
    <p>
      <%=raw @sermon.scripture_reading %>
    </p>
  </section>
  <section>
    <h1>Mp3 File</h1>
    <p>
      <% if @sermon.mp3_file.present? %>
        <%= link_to 'mp3_file', @sermon.mp3_file.url %>
      <% else %>
        mp3_file
      <% end %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @sermon.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="sermons">
      <% @sermons.each do |sermon| %>
        <li>
          <%= link_to sermon.title, refinery.sermons_sermon_path(sermon) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
