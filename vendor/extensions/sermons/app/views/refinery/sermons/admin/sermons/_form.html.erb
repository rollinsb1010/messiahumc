<%= form_for [refinery, :sermons_admin, @sermon] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @sermon,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :pastor_id -%>
    <%= f.number_field :pastor_id  -%>

  </div>
  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.date_select :date  -%>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description, :scripture_reading].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/sermons/sermon", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:description, :scripture_reading].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  

  </div>
  
  <div class='field'>
    <%= f.label :mp3_file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :mp3_file_id,
               :resource => @sermon.mp3_file %>

  </div>
  
  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @sermon.image,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sermons.admin.sermons.sermon'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @sermon.title) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
