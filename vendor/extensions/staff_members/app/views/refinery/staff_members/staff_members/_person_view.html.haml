.person_view
  %h1 Meet #{@person.name}
  %aside
    %p= image_fu @person.photo, '257x371#c'
    - unless @person.email.empty?
      %p
        = link_to(@person.email) do
          email #{@person.name}
    - if @person.pastor?
      %p
        = link_to(@person.email) do
          jots from #{@person.name}
  .bio= raw @person.bio
